@using RealEstateApp.Core.Application.ViewModels.Improvement
@model List<ImprovementViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Listado de Mejoras";
}

<div class="container mt-5">
    <h1 class="">Listado de Mejoras</h1>
    <a asp-controller="Improvement" asp-action="Create" class="btn btn-primary m-3">
        <i class="bi bi-plus-circle-fill"></i>
        Crear mejora
    </a>
    <div class="border rounded-3 shadow bg-white p-4 mt-4">
        <table class="table table-hover">
            <thead class="fw-bold fs-5">
                <tr>
                    <th class="">Nombre</th>
                    <th class="">Descripcion</th>
                    <th class="text-end">Opciones</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (ImprovementViewModel improvement in Model)
                {
                    <tr class="align-middle">
                        <td class="py-3 fs-6">
                            @improvement.Name
                        </td>
                        <td class="py-3">
                            @improvement.Description
                        </td>                        
                        <td class="text-end align-items-center py-3">

                            <a class="btn btn-secondary btn-sm" asp-controller="Improvement" asp-action="Edit" asp-route-id=@improvement.Id>
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Improvement" asp-action="Delete" asp-route-id=@improvement.Id>
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
