@using RealEstateApp.Core.Application.Dtos.Account
@using RealEstateApp.Core.Application.Helpers
@inject IHttpContextAccessor httpContextAccessor
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateApp.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateApp.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style type="text/css">
        html, body {
            margin: 0px;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="main-container d-flex vh-100">
        <div class="sidebar bg-dark d-flex flex-column" id="side_nav">
            <div class="px-3 pt-4 pb-4">
                <span class="bg-white text-dark rounded shadow px-2 small me-2">ADMIN</span>
                <h1 class="fs-4">
                    <span class="text-white me-2">Real Estate APP</span>
                </h1>
            </div>
            <ul class="list-unstyled px-2 mt-2">
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block" asp-controller="Admin" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Home
                    </a>
                </li>
            </ul>

            <hr class="bg-white mx-2 mt-0">
            <span class="fs-6 fw-bolder text-white px-3">
                USUARIOS
            </span>

            <ul class="list-unstyled px-2 mt-3">
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between" asp-controller="User" asp-action="AgentManagement">
                        <span>
                            <i class="fa-solid fa-user"></i>
                            Listado de agentes
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block d-flex justify-content-between" asp-controller="User" asp-action="AdminManagement">
                        <span>
                            <i class="fa-solid fa-user-tie"></i>
                            Mant Administradores
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block justify-content-between" asp-controller="User" asp-action="DevManagement">
                        <span>
                            <i class="fa-solid fa-user-gear"></i>
                            Mant Desarrolladores
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
            </ul>

            <hr class="bg-white mx-2">
            <span class="fs-6 fw-bolder text-white px-3">
                PROPIEDADES
            </span>

            <ul class="list-unstyled px-2 mt-3">
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block justify-content-between" asp-controller="Improvement" asp-action="Index">
                        <span>
                            <i class="bi bi-house-gear-fill"></i>
                            Mant de mejoras
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block justify-content-between" asp-controller="SaleType" asp-action="Index">
                        <span>
                            <i class="fa-solid fa-file-invoice-dollar"></i>
                            Mant tipos de ventas
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
                <li class="">
                    <a class="text-decoration-none px-3 py-2 d-block justify-content-between" asp-controller="PropertyType" asp-action="Index">
                        <span>
                            <i class="fa-solid fa-city"></i>
                            Mant tipo de propiedades
                        </span>
                        <span class="text-white py-0 px-2 float-end">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                    </a>
                </li>
            </ul>
            <hr class="bg-white mx-2">
            <div class="dropdown mt-auto ps-3 pb-3">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="d-none d-sm-inline fs-6 fw-bold">@User.UserName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark small shadow">
@*                     <li><hr class="dropdown-divider"></li>
 *@                    <li><a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="LogOut">Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
        <div class="flex-grow-1">
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

