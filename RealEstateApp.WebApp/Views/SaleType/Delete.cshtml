@model RealEstateApp.Core.Application.ViewModels.SaleType.SaveSaleTypeViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Eliminar tipo de venta";
}

<div class="container mt-5 w-50">
    <div class="card border rounded-3 shadow">
        <div class="card-header bg-white fw-bold">
            <h4>Eliminar el tipo de venta: @Model.Name</h4>
        </div>
        <form method="post" asp-controller="SaleType" asp-action="DeleteSaleType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="card-body">
                <span>¿Está seguro de que desea eliminar el tipo de venta y sus propiedades asociadas?</span>
            </div>

            <div class="card-footer mt-2 bg-white">
                <button type="submit" class="btn btn-danger">Confirmar</button>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>